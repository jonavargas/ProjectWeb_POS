@model ClassLibrary1.BillDetail

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>BillDetail</legend>

        <div class="editor-label">
            @Html.Label("Price")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.price)
            @Html.ValidationMessageFor(model => model.price)
        </div>

        <div class="editor-label">
            @Html.Label("Tax")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.tax)
            @Html.ValidationMessageFor(model => model.tax)
        </div>

        <div class="editor-label">
            @Html.Label("Qty")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.qty)
            @Html.ValidationMessageFor(model => model.qty)
        </div>

        <div class="editor-label">
            @Html.Label( "Bill")
        </div>
        <div class="editor-field">
            @Html.DropDownList("bill_Id", String.Empty)
            @Html.ValidationMessageFor(model => model.bill_Id)
        </div>

        <div class="editor-label">
            @Html.Label("Products")
        </div>
        <div class="editor-field">
            @Html.DropDownList("products_Id", String.Empty)
            @Html.ValidationMessageFor(model => model.products_Id)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
