@model ClassLibrary1.Bill

@{
    ViewBag.Title = "Create Bill";
}

<h2>Create Bill</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Bill</legend>

        <div class="editor-label">
            @Html.Label("Date")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.date)
            @Html.ValidationMessageFor(model => model.date)
        </div>

        <div class="editor-label">
            @Html.Label("Employee")
        </div>
        <div class="editor-field">
            @Html.DropDownList("employee_Id", String.Empty)
            @Html.ValidationMessageFor(model => model.employee_Id)
        </div>

        <div class="editor-label">
            @Html.Label("Client")
        </div>
        <div class="editor-field">
            @Html.DropDownList("client_Id", String.Empty)
            @Html.ValidationMessageFor(model => model.client_Id)
        </div>

        <div class="editor-label">
            @Html.Label("State")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.state)
            @Html.ValidationMessageFor(model => model.state)
        </div>

        <div class="editor-label">
            @Html.Label("PaymentType")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.paymentType)
            @Html.ValidationMessageFor(model => model.paymentType)
        </div>

        <div class="editor-label">
            @Html.Label("Discount")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.discount)
            @Html.ValidationMessageFor(model => model.discount)
        </div>

        <div class="editor-label">
            @Html.Label("Subtotal")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.subtotal)
            @Html.ValidationMessageFor(model => model.subtotal)
        </div>

        <div class="editor-label">
            @Html.Label("Tax")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.tax)
            @Html.ValidationMessageFor(model => model.tax)
        </div>        

        <div class="editor-label">
            @Html.Label("Total")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.total)
            @Html.ValidationMessageFor(model => model.total)
        </div>       

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
