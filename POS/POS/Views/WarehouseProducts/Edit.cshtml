@model ClassLibrary1.WarehouseProducts

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>WarehouseProducts</legend>

        @Html.HiddenFor(model => model.id)

        <div class="editor-label">
            @Html.Label("Product")
        </div>
        <div class="editor-field">
            @Html.DropDownList("idProducts", String.Empty)
            @Html.ValidationMessageFor(model => model.idProducts)
        </div>

        <div class="editor-label">
            @Html.Label("QTY")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.qtyAvailable)
            @Html.ValidationMessageFor(model => model.qtyAvailable)
        </div>

        <div class="editor-label">
            @Html.Label("Warehouse")
        </div>
        <div class="editor-field">
            @Html.DropDownList("idWarehouse", String.Empty)
            @Html.ValidationMessageFor(model => model.idWarehouse)
        </div>       

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
